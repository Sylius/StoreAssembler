{
    "name": "sylius/store-assembler-bundle",
    "type": "symfony-bundle",
    "description": "Sylius Store Assembler â€“ tool to assemble Sylius stores from a set of configuration files.",
    "license": "MIT",
    "require": {
        "php": ">=8.2",
        "composer/semver": "^3.4",
        "symfony/console": "^6.0 || ^7.0",
        "symfony/filesystem": "^6.0 || ^7.0",
        "symfony/framework-bundle": "^6.0 || ^7.0",
        "symfony/process": "^6.0 || ^7.0",
        "symfony/yaml": "^6.0 || ^7.0"
    },
    "autoload": {
        "psr-4": {
            "Sylius\\StoreAssemblerBundle\\": "src/"
        }
    },
    "bin": [
        "bin/sylius-store-assembler"
    ],
    "extra": {
        "symfony": {
            "bundle": [
                "Sylius\\StoreAssemblerBundle\\SyliusStoreAssemblerBundle"
            ]
        }
    },
    "require-dev": {
        "phpstan/phpstan": "^2.0",
        "friendsofphp/php-cs-fixer": "^3.0",
        "rector/rector": "^2.0"
    },
    "scripts": {
        "rector": "vendor/bin/rector process src --config=config/rector.php",
        "cs": "php-cs-fixer fix --config=.php-cs-fixer.dist.php",
        "phpstan": "vendor/bin/phpstan analyse --configuration=phpstan.neon"
    },
    "minimum-stability": "stable"
}
